
@{
    ViewData["Title"] = "Thêm File Code";
}

<script src="~/Themes/ckeditor/ckeditor.js" asp-append-version="true"></script>

<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <h1>@ViewData["Title"]</h1>
        <form action="/Home/SaveFile" method="post">
          <div class="form-group">
            <label for="menuName">Tên File</label>
            <input type="text" class="form-control" id="FileName" aria-describedby="FileName" name="FileName" placeholder="Nhập tên File">
          </div>
          <div class="form-group">
            <label for="content">Nội dung</label>
            <textarea id="Contents-File" class="form-control" name="Contents"></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Lưu</button>
        </form>
    </div>
    <div class="col-2"></div>
</div>

<script>
    CKEDITOR.replace("Contents-File");  
</script>
