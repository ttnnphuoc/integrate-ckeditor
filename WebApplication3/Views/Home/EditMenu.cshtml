@{
    ViewData["Title"] = "Sửa menu";
}
<script src="~/Themes/ckeditor/ckeditor.js" asp-append-version="true"></script>

<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <h1>@ViewData["Title"]</h1>
        <form action="/Home/UpdateMenu" method="post">
           <div class="form-group">
            <label for="menuName">Tên file</label>
            <input type="text" class="form-control" id="Id" aria-describedby="FileName" name="Id" value="@Model.Id" readonly>
          </div>
          <div class="form-group">
            <label for="menuName">Tên menu</label>
            <input type="text" class="form-control" id="menuName" aria-describedby="menuName" name="MenuName" placeholder="Nhập tên menu" value="@Model.MenuName">
          </div>
          <div class="form-group">
            <label for="content">Nội dung</label>
            <textarea id="Contents" class="form-control" name="Contents">@Model.Contents</textarea>
          </div>
          <button type="submit" class="btn btn-primary">Lưu</button>
        </form>
    </div>
    <div class="col-2"></div>
</div>

<script>
    CKEDITOR.replace("Contents");  
</script>